        .bi {
            color:@CssValor;
        }
    </style>
}

<!-- CssValor: Rodapé -->
@if (NomeCssValor == "config.nome_cor" && !string.IsNullOrEmpty(CssValor))
{
    <style>
        .texto-rodape {
            color:@CssValor;
        }
    </style>

    <style>
        .link-rodape {
            color:@CssValor;
        }
    </style>
}

@code {
    [Parameter] public string NomeCssValor { get; set; }
    [Parameter] public string CssValor { get; set; }
}
